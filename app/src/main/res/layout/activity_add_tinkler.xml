<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".LoginActivity" >

    <EditText
        android:id="@+id/tinkler_name"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="Name"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/tinkler_type_spinner"
        android:layout_alignStart="@+id/tinkler_type_spinner"
        android:layout_marginTop="20dp" />
    
    <Spinner
        android:id="@+id/tinkler_type_spinner"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/next_button"
        android:layout_alignStart="@+id/next_button" />

    <ImageView
	    android:id="@+id/tinkler_image"
	    android:layout_width="130dp"
        android:background="@drawable/icon_placeholder"
	    android:layout_height="140dp"
        android:layout_above="@+id/tinkler_type_spinner"
        android:layout_centerHorizontal="true" />
	
    <Button 
        android:id="@+id/next_button"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:background="@color/red_tinkler"
        android:textColor="@color/white"
        android:text="next"
        android:layout_below="@+id/tinkler_image"
        android:layout_centerHorizontal="true" />

</RelativeLayout>