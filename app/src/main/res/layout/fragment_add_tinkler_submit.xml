<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:id="@+id/tinklerImg_imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_placeholder"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tinkler Type"
        android:id="@+id/tinklerType_textView"
        android:layout_below="@+id/tinklerImg_imageView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/tinkler_attr01"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="Attribute 1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/tinkler_attr02"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="Attribute 2"
        android:layout_below="@+id/tinkler_attr01"
        android:layout_alignLeft="@+id/tinkler_attr01"
        android:layout_alignStart="@+id/tinkler_attr01"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/red_tinkler"
        android:textColor="@color/white"
        android:text="submit"
        android:layout_below="@+id/tinkler_attr02"
        android:layout_alignLeft="@+id/tinkler_attr02"
        android:layout_alignStart="@+id/tinkler_attr02" />

</RelativeLayout>