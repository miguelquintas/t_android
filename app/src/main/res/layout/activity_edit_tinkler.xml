<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <com.parse.ParseImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/editTinklerImage"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.21"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:minHeight="50px" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTinklerName"
        android:layout_below="@+id/editTinklerImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Spinner
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTinklerSpinner"
        android:layout_below="@+id/editTinklerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTinklerAtr01"
        android:layout_below="@+id/editTinklerSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTinklerAtr02"
        android:layout_below="@+id/editTinklerAtr01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <com.parse.ParseImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/editTinklerQrCode"
        android:layout_below="@+id/editTinklerAtr02"
        android:layout_alignLeft="@+id/editTinklerAtr02"
        android:layout_alignStart="@+id/editTinklerAtr02"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="regenerate"
        android:background="@color/red_tinkler"
        android:textColor="@color/white"
        android:id="@+id/editTinklerRegBtn"
        android:layout_alignTop="@+id/editTinklerQrCode"
        android:layout_alignRight="@+id/editTinklerAtr02"
        android:layout_alignEnd="@+id/editTinklerAtr02" />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="update"
        android:background="@color/red_tinkler"
        android:textColor="@color/white"
        android:id="@+id/editTinklerUpdBtn"
        android:layout_below="@+id/editTinklerQrCode"
        android:layout_alignLeft="@+id/editTinklerQrCode"
        android:layout_alignStart="@+id/editTinklerQrCode" />

    <Button
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="delete"
        android:background="@color/red_tinkler"
        android:textColor="@color/white"
        android:id="@+id/editTinklerDelBtn"
        android:layout_alignTop="@+id/editTinklerUpdBtn"
        android:layout_alignRight="@+id/editTinklerRegBtn"
        android:layout_alignEnd="@+id/editTinklerRegBtn" />

</RelativeLayout>