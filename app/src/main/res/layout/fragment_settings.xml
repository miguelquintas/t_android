<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="110dp"
        android:background="@drawable/user_placeholder"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/user_name"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:hint="Name"
        android:layout_below="@+id/user_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Tutorial"
        android:textColor="@color/blue_tinkler"
        android:id="@+id/tutorial_textView"
        android:layout_below="@+id/switch1"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/resetPwd_button"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/red_tinkler"
        android:textColor="@color/white"
        android:text="reset password"
        android:layout_above="@+id/logout_button"
        android:layout_alignLeft="@+id/logout_button"
        android:layout_alignStart="@+id/logout_button"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@color/red_tinkler"
        android:textColor="@color/white"
        android:text="logout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <Switch
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:text="Custom messages"
        android:id="@+id/switch1"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/user_name"
        android:layout_alignStart="@+id/user_name" />

</RelativeLayout>